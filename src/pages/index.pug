extends ../layout/_main

block append config
  -
    const isTop = true;
    const page = {
      title: site.name,
      description: `PON DESIGNは、新規サイト制作や運用、アプリ開発に強いWeb制作会社です。サイト作りはお客様の夢を叶えること。だからこそ成果を出すサイトを全力でお作りします。`,
    };

block mainContent
  //- hero
  .p-hero.-index#js-hero
    .p-hero__body
      p.p-hero__copy(lang="en")
        | Web Design <br aria-hidden="true" class="lg:u-none"> Specialist
      p.p-hero__subCopy お客様の夢を叶える<br class="md:u-none" aria-hidden="true">Webサイトを制作
      p.p-hero__button
        +primaryButton("/contact", '-primary -reverse', "contact")
    .p-hero__scroll
      span(lang="en") Scroll

  //- News
  section.p-section
    .l-container.p-indexNews
      .p-indexNews__header
        +primaryTitle('News', 'お知らせ')
      .p-indexNews__body
        ul.p-newsList
          each news in newsData
            li.p-newsList__item
              a(href="/news-single").p-newsList__link
                .p-newsList__meta
                  time.p-newsList__date #{news.date}
                  span.p-newsList__label #{news.category}
                p.p-newsList__title #{news.title}

  //- Service
  section.p-section
    .l-container
      +primaryTitle('Service', '事業内容')
      .u-overflow-hidden
        .l-grid(data-gap="8 md:6")
          each service in serviceData
            section.l-grid__item(data-col="12 sm:6 lg:4")
              .c-card.p-service
                .c-card__body.p-service__body
                  h3.p-service__title #{service.title}
                  p.p-service__text #{service.description.index}
                figure.c-card__imgWrapper.p-service__imgWrapper
                  img(
                    src=`${imgPath}service/${service.imageFile}.jpg`,
                    alt="",
                    srcset=`${imgPath}service/${service.imageFile}.jpg 1x, ${imgPath}service/${service.imageFile}@2x.jpg 2x`
                  )
      .p-section__button
        +primaryButton('/service')

  //- Works
  section.p-section.-works
    .p-indexWorks
      .l-container.-lg
        .p-indexWorks__inner
          .p-indexWorks__body
            +primaryTitle('Works', '制作実績')
            p.u-text-center 様々なジャンルのWebサイト制作が可能です。<br aria-hidden="true">ご購入やお申込み数の増加などを実現します！
            .p-section__button
              +primaryButton('/works')
          .p-indexWorks__slider
            .splide#js-worksSlider(aria-label="制作実績の画像一覧")
              .splide__arrows
                button(type="button" class="splide__arrow splide__arrow--prev")
                  <i class="fa-solid fa-chevron-left"></i>
                button(type="button" class="splide__arrow splide__arrow--next")
                  <i class="fa-solid fa-chevron-right"></i>
              .splide__track
                ul.splide__list
                  each fileName in ['smoothiesta', 'web-conference', 'lamina']
                    li.splide__slide
                      figure
                        img(
                          src=`${imgPath}works/${fileName}.jpg`,
                          alt="",
                          srcset=`${imgPath}works/${fileName}.jpg 1x, ${imgPath}works/${fileName}@2x.jpg 2x`
                        )

  //- Company
  section.p-company
    .l-container
      +primaryTitle('Company', '私たちについて')
      p.p-company__copy: strong
        span.u-inline-block サイトのゴール =&nbsp;
        span.u-inline-block 夢を叶えること
      p.u-text-center.u-mt-8 お客様の夢を叶えること。<br>それがWebサイトのゴールであり、<br aria-hidden="true">私たちが目指すことです。<br>だからこそちゃんと成果を出すサイトを<br aria-hidden="true">全力でお作りします。<br>お客様の笑顔を見たい。<br aria-hidden="true">夢を実現する手助けをさせてください。
      .p-section__button
        +primaryButton('/company')
    figure.p-company__imgWrapper
      picture
        source(
          type="image/png"
          srcset=`${imgPath}company/bg_circle_sp.png 1x, ${imgPath}company/bg_circle_sp@2x.png 2x`
          width="375"
          height="576"
          media="(max-width: 767px)"
        )
        img(src=`${imgPath}company/bg_company.png`, alt="" srcset=`${imgPath}company/bg_company.png 1x, ${imgPath}company/bg_company@2x.png 2x`)


  //- Recruit
  section.p-section.-recruit
    .l-container
      .p-indexRecruit
        .p-indexRecruit__body
          +primaryTitle('Recruit', '採用情報')
          p 私たちと一緒に働きませんか？
          .p-section__button
            +primaryButton('/recruit')
        figure.p-indexRecruit__imgWrapper
          img(src=`${imgPath}top/recruit.jpg`, alt="", srcset=`${imgPath}top/recruit.jpg 1x, ${imgPath}top/recruit@2x.jpg 2x`)
